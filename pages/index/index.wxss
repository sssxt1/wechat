.header{
  border-left-width: 5px;
  border-left-style: solid;
  border-left-color: green;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.text-all{
  color: rgb(89, 143, 9);
  font-size: 10px;
}

.content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;

}
.content-item{
  height: 300rpx;
  width: 45%;
  background-color: yellowgreen;
  margin: 2px;
  position: relative;
}

.content-item-image{
  width: 100%;
  height: 100%;
}

.content-item-text{
  position: absolute;
  bottom: 0px;
  color: white;
  font-size: 10px;
  background: -webkit-linear-gradient(bottom,rgba(0,0,0,0.5),rgba(0,0,0,0));
  height: 150rpx;
  width: 98%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-left: 1%;
  padding-right: 1%;
  padding-bottom: 2%;
}

.list-item{
  height: 500rpx;
  width: 100%;
}

.list-item-images{
  height: 300px;
  width: 100%;
  position: relative;
}
.list-item-images-img{
  height: 100%;
  width: 100%;
}
.avatar{
  height: 100rpx;
  width:100rpx;
  border-radius: 50%;
  position: absolute;
  bottom:-50rpx;
  right: 70rpx;
}

.list-item-text{
  height: 200rpx;
  width: 96%;
  background-color: lightcyan;
  margin-top: 20rpx;
  padding-left: 2%;
  padding-right: 2%;
}


.list-item-text-content{
  font-size: 10px;
  color: lightgray;
  margin-top: 20rpx;
}

.list-item-text-title{
  font-size: 20px;
  color: darkorange;
}